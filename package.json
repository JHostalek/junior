{
  "name": "junior",
  "version": "0.1.0",
  "description": "Autonomous software development automation CLI - queue tasks, schedule them, and execute via headless Claude Code",
  "license": "MIT",
  "author": "Jan Hostalek",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JHostalek/junior.git"
  },
  "bugs": {
    "url": "https://github.com/JHostalek/junior/issues"
  },
  "homepage": "https://github.com/JHostalek/junior#readme",
  "keywords": [
    "ai",
    "automation",
    "cli",
    "claude",
    "code-generation",
    "developer-tools",
    "development",
    "git",
    "task-queue",
    "scheduler",
    "worktree",
    "daemon"
  ],
  "type": "module",
  "bin": {
    "junior": "./dist/junior",
    "jr": "./dist/junior"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "build": "bun build src/index.ts --compile --outfile dist/junior",
    "dev": "bun --watch src/index.ts",
    "start": "./dist/junior",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "check": "bun run typecheck && bun run lint"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "croner": "^9.0.0",
    "drizzle-orm": "^0.38.4",
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "wrap-ansi": "^9.0.2",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^22.13.4",
    "@types/react": "^19.2.14",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.30.4",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.7.3"
  }
}
