{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noControlCharactersInRegex": "off",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off"
      },
      "correctness": {
        "noInvalidUseBeforeDeclaration": "off"
      }
    }
  },
  "files": {
    "includes": ["src/**", "*.json", "*.ts", "!dist", "!node_modules", "!.junior", "!.claude"]
  }
}
